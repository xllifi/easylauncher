{
  "name": "easylauncher",
  "version": "0.3.4",
  "description": "Лаунчер для Minecraft сервера EasyMain",
  "main": "./out/main/index.js",
  "author": "xllifi",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "yarn typecheck:node && yarn svelte-check",
    "dev": "electron-vite dev",
    "postinstall": "electron-builder install-app-deps",
    "build": "yarn typecheck && electron-vite build",
    "build:unpack": "yarn build && electron-builder --dir",
    "build:win": "yarn build && electron-builder --win"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@sentry/electron": "^5.9.0",
    "@sentry/svelte": "^8.50.0",
    "electron-updater": "^6.1.7",
    "ky": "^1.7.4",
    "lucide-svelte": "^0.447.0",
    "skinview3d": "^3.1.0",
    "svelte-flags": "^2.0.1",
    "svelte-i18n": "^4.0.1",
    "svelte-persisted-store": "^0.12.0",
    "svooltip": "^0.8.3",
    "xlicore": "^0.0.10"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^5",
    "@types/node": "^20.14.8",
    "electron": "^34.0.0",
    "electron-builder": "^26.0.0-alpha.9",
    "electron-vite": "^2.3.0",
    "eslint": "^9.14.0",
    "eslint-plugin-svelte": "^2.46.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.7",
    "sass-embedded": "^1.79.4",
    "svelte": "^5.1.9",
    "svelte-check": "^4.0.5",
    "tslib": "^2.6.3",
    "typescript": "^5.5.2",
    "vite": "^6.0.9"
  }
}
